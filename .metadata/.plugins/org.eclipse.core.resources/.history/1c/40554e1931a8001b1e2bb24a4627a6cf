public class Main {

	public static void main(String[] args) {
	
		Product product1 = new Product(); /*Classý oluþturmak için bunu yapmamýz lazým*/
		product1.id=1;
		product1.name="Lenovo v14";
		product1.unitPrice = 12.400;
		product1.detail = "16 GB Ram";
		

		Product product2 = new Product(); /*Classý oluþturmak için bunu yapmamýz lazým*/
		product2.id=2;
		product2.name="Lenovo v15";
		product2.unitPrice = 14400.99;
		product2.detail = "32 GB Ram";
		

		Product product3 = new Product(); /*Classý oluþturmak için bunu yapmamýz lazým*/
		product3.id=3;
		product3.name="HP 5";
		product3.unitPrice = 12.000;
		product3.detail = "8 GB Ram";
		
		
		Product[] products = {product1,product2,product3}; /* array oluþturup birden fazla veriyi çektik.*/
		
		for (Product product : products) {
			System.out.println(product.name);
		}
		
		
		
		System.out.println(products.length);
		
		
		/*----------------------------------------------------------------------------------------------------------------------------- */
			Category category1 = new Category();
